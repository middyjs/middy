{
  "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es6", "es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "sourceMap": true,
      "target": "es6",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*",
      "src/index.d.ts"
  ],
  "exclude": [
    "src/__tests__/*"
  ]
}
